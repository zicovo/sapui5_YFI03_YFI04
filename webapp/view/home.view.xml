<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="dwp.sapui5_project_YFI03_YFI04.controller.home"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="YFI03:Payment Medium: Reorganisation of Payment Data">
				<content>
					<Table id="idPaymentRunTable" inset="false" items="{ path: '/payment_runSet', sorter: { path: 'Laufi' } }">
						<headerToolbar>
							<OverflowToolbar>
								<content>
									<Title text="Payment runs" level="H2"/>
									<ToolbarSpacer/>
								</content>
							</OverflowToolbar>
						</headerToolbar>
						<columns>
							<Column width="12em">
								<Text text="Identification"/>
							</Column>
							<Column demandPopin="true">
								<Text text="Run On"/>
							</Column>
							<Column demandPopin="true">
								 <Text text="Paying co. code"/>
						</Column>
						<Column demandPopin="true">
							<Text text="Vendor"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="showDetails">
						<cells>
							<Text text="{Laufi}"/>
							<Text text="{Laufd}"/>
							<Text text="{Zbukr}"/>
							<Text text="{Lifnr}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</pages>
</App>
</mvc:View>