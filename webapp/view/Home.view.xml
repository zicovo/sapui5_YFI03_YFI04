<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="dwp.sapui5_project_YFI03_YFI04.controller.Home"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>YFIO3Title}">
				<content>
					<Table id="idPaymentRunTable" inset="false" items="{ path: '/payment_runSet', sorter: { path: 'Laufi' } }">
						<headerToolbar>
							<OverflowToolbar>
								<content>
									<Title text="Payment runs" level="H2"/>
									<ToolbarSpacer/>
									<SearchField placeholder="{i18n>FilterOnID}" id="searchField" search=".onSearch" width="15rem"/>
								</content>
							</OverflowToolbar>
						</headerToolbar>
						<columns>
							<Column width="12em">
								<Text text="{i18n>Laufi}"/>
							</Column>
							<Column demandPopin="true">
								<Text text="{i18n>Laufd}"/>
							</Column>
							<Column demandPopin="true">
								<Text text="{i18n>Zbukr}"/>
							</Column>
							<Column demandPopin="true">
								<Text text="{i18n>Lifnr}"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem type="Navigation" press="showDetails">
								<cells>
									<Text text="{Laufi}"/>
									<Text text="{Laufd}"/>
									<Text text="{Zbukr}"/>
									<Text text="{Lifnr}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>